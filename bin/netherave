#!/usr/bin/env php
<?php

use Nether\Console;

////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

(function(){
	$CWD = getcwd();
	$Autoloaders = [
		'InstalledMode' => sprintf('%s/../../../autoload.php', __DIR__),
		'DeveloperMode' => sprintf('%s/../vendor/autoload.php', __DIR__)
	];

	if(file_exists("{$CWD}/dev.lock")) {
		echo 'DEVELOPER MODE', PHP_EOL;
		require($Autoloaders['DeveloperMode']);
	}

	else {
		echo 'INSTALLED MODE', PHP_EOL;
		require($Autoloaders['InstalledMode']);
	}

	return;
})();



////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

class App
extends Nether\Console\Client {

	#[Console\Meta\Subcommand]
	#[Console\Meta\Info('Generate a static route map.')]
	public function
	HandleGen():
	int {

		return 0;
	}

}

(new App)->Run();
