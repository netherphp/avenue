#!/usr/bin/env php
<?php

use Nether\Console;

////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

(function(){

	$CWD = getcwd();
	$Autoloader = sprintf(
		'%s/autoload.php',
		dirname(__DIR__, 3)
	);

	if(file_exists("{$CWD}/dev.lock"))
	$Autoloader = sprintf(
		'%s/vendor/autoload.php',
		dirname(__DIR__, 1)
	);

	////////

	echo "Autoloader: {$Autoloader}", PHP_EOL;
	require($Autoloader);

	return;
})();



////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

class App
extends Nether\Console\Client {

	#[Console\Meta\Subcommand]
	#[Console\Meta\Info('Generate a static route map.')]
	public function
	HandleGen():
	int {

		return 0;
	}

}

(new App)->Run();
